                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/show_hide_text"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/butn_create"
                    android:textAllCaps="false"
                    android:textColor="?colorSecondary" />

                <TextView
                    style="@style/CondensedTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toStartOf="@id/show_hide_text"
                    android:layout_toLeftOf="@id/show_hide_text"
                    android:text="Create hotspot for new connection" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

